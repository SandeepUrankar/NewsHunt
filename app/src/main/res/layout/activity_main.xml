<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:foregroundGravity="center"
        android:padding="40dp">

        <ImageButton
            android:id="@+id/head"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/headlines" />

        <ImageButton
            android:id="@+id/globalhead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/globalhead" />

        <ImageButton
            android:id="@+id/indiahead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/indiahead" />

        <ImageButton
            android:id="@+id/techhead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="1"
            android:layout_column="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/techhead" />

        <ImageButton
            android:id="@+id/cryptohead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/cryptohead" />

        <ImageButton
            android:id="@+id/businesshead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="2"
            android:layout_column="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/businesshead" />

        <ImageButton
            android:id="@+id/sportshead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="3"
            android:layout_column="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/sportshead" />


        <ImageButton
            android:id="@+id/footballhead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="3"
            android:layout_column="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/footballhead" />

        <ImageButton
            android:id="@+id/crickethead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="4"
            android:layout_column="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/crickethead" />

        <ImageButton
            android:id="@+id/enterhead"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_row="4"
            android:layout_column="1"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/enterhead" />

    </GridLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_head"
        app:menu="@menu/nav_menu" />


</android.support.v4.widget.DrawerLayout>